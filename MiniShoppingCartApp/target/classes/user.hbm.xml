<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

          <hibernate-mapping>
          <class name="com.team5.usermodule.User" table="userdetails">
 			      
          <id name="id">
          	<generator class="increment"></generator>
          </id>
          <property name="name"></property>
          <property name="password"></property>
          <property name="email"></property>
          </class>
           <class name= "com.team5.productmodule.Product" table="cartproducts">
          <id name="id">
          	<generator class="increment"></generator>
          </id>
          <property name="userid"></property>
          <property name="name"></property>
          <property name="price"></property>
          <property name="quantity"></property>
          
          
          </class>
           <class name= "com.team5.productmodule.ProductWishList" table="wishlistproducts">
          <id name="id">
          	<generator class="increment"></generator>
          </id>
          <property name="userid"></property>
          <property name="name"></property>
          <property name="price"></property>
          <property name="quantity"></property>
          
          
          </class>
          
          </hibernate-mapping>